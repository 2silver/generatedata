{
  "compilerOptions": {
    "lib": ["es6", "dom", "esnext", "webworker"],
    "outDir": "./dist/",
	"sourceMap": true,
	"esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es6",
	"jsx": "react",
	"allowSyntheticDefaultImports": true,
	"removeComments": false,
    "baseUrl": "",
    "paths": {
      "~components/*": ["client/src/components/*"],
      "~utils/*": ["client/src/utils/*"],
      "~types/*": ["client/types/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
